<div class="row profile-summary profile-preview">
  <div class="col-md-2">
    <%= image_tag User.find(dm_profile.user_id).avatar.url(:thumb) %>
  </div>
  <div class="col-md-3 profile-excerpt">
    <p class="username-preview info-label"><%= User.find(dm_profile.user_id).username %></p>
    <br>
    <p class="info-label">Age:</p>
    <p class="info"><%= User.find(dm_profile.user_id).age %></p>
    <br>
    <p class="info"><%= translate_experience_level(dm_profile.experience_level) %></p>
  </div>
  <div class="col-md-3 profile-excerpt">
    <p class="info-label">Plays:</p>
    <br>
    <p class="info"><%= ruleset_preview(dm_profile) %></p>
  </div>
  <div class="button-container col-md-2">
    <%= link_to "More info", user_dm_profiles_path(User.find(dm_profile.user_id)), class: "show-more-button profile-button" %>
  </div>
  <div class="button-container col-md-2">
    <%= button_to "Write to me", "#", class: "contact-me-button-small profile-button" %>
  </div>
</div>
