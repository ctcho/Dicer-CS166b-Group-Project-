<!DOCTYPE html>
<html>
  <head>
    <title>Dicer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header"><span class="left-align">  <%= link_to "Dicer", home_pages_home_path %>
                                                   <%= link_to "About Us", home_pages_about_path %>
                                                   <%= link_to "Contact Us", home_pages_contact_path %>
                                                   <%= link_to "Resources", home_pages_resources_path %>
                                             </span>
                        <span class="right-align">
                          <% if logged_in? %>
                            <%= link_to "Log Out", logout_path, method: "delete"%>
                            <%= link_to "Profile", user_path(current_user) %>
                            <%= link_to "Settings", user_settings_path(current_user) %>
                            <%= link_to "Search for Users...", search_pages_search_path %>
                          <% else %>
                            <%= link_to "Log In", login_path%>
                          <% end %>
                          </span></div>
    <div><%= yield %></div>

    <%= debug(params) if Rails.env.development? %>

  </body>
</html>
