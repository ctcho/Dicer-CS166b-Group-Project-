<!DOCTYPE html>
<html>
  <head>
    <title>Dicer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header"><span class="left-align"><%= link_to "Dicer", home_pages_home_path %></span>
                        <span class="right-align"><%= link_to "About Us", home_pages_about_path %>
                          <% if logged_in? %>
                            <%= link_to "Log Out", logout_path, method: "delete"%>
                            <%= link_to "Profile", user_path(current_user) %>
                          <% else %>
                            <%= link_to "Log In", login_path%>
                          <% end %>
                          </span></div>


    <div class="content"><%= yield %></div>
    <%= debug(params) if Rails.env.development? %>
  <!--  <div class="footer"><span class="left-align"><%= link_to "Contact Us", home_pages_contact_path %></span>
                        <span class="right-align"><%= link_to "FAQ", home_pages_resources_path %></span></div>
-->
  </body>
</html>
