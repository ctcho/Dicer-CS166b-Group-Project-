<h1>Search Page</h1>
<p>Enter your preferences here:</p>

<%= form_tag(search_pages_results_path, method: "get") do %>
  <strong>Profile Type (Default Search is for Players)</strong>
  <br>
  <%= select_tag :profile_type, options_for_select([["Players", 0], ["DM's", 1]]) %>
  <br><br><br>
  <strong>Search Preferences</strong>
  <br><br>
  <%= label_tag(:option_all, "Search for ALL the listed options") %>
  <%= radio_button_tag(:option, "AND", true) %>
  <%= label_tag(:option_or, "Search for ANY of the listed options") %>
  <%= radio_button_tag(:option, "OR") %>
  <br><br><br>
  <strong>Exp Level</strong>
  <br>
  <%= select_tag :experience_level, options_for_select([["No preference", 0],
    ['Beginner (0-1 years of play)', 1], ['Novice (1-2 years of play)', 2],
    ['Experienced (2-5 years of play)', 3], ['Veteran (More than 5 years of play)', 4]]) %>
    <br><br><br>
    <strong>Preferred Rulesets</strong>
    <br><br>
    <%=label_tag :home, "Homebrew" %>
    <%=check_box_tag :r1, :homebrew %>
    <%=label_tag :original, "Original Ruleset" %>
    <%=check_box_tag :r2, :original_ruleset %>
    <%=label_tag :advanced, "Advanced Ruleset" %>
    <%=check_box_tag :r3, :advanced_ruleset %>
    <%=label_tag :path, "Pathfinder" %>
    <%=check_box_tag :r4, :pathfinder %>
    <%=label_tag :th, "Third" %>
    <%=check_box_tag :r5, :third %>
    <%=label_tag :t_five, "Three-Point-Five" %>
    <%=check_box_tag :r6, :three_point_five %>
    <%=label_tag :frth, "Fourth" %>
    <%=check_box_tag :r7, :fourth %>
    <%=label_tag :ffth, "Fifth" %>
    <%=check_box_tag :r8, :fifth %>
    <br><br><br>
    <strong>Prefer Online Play?</strong>
    <br>
    <%= select_tag :online_play, options_for_select([["Yes", 1], ["No", 0]]), prompt: "Select an Option" %>
    <br><br><br>
    <strong>Campaign Type</strong>
    <br>
    <%= select_tag :campaign_type, options_for_select([["No preference", 2],
    ["Original Campaign", :original_campaign], ["Module", :module]]) %>
    <br><br><br>
  <%= submit_tag "Search", name: nil %>
<% end %>
