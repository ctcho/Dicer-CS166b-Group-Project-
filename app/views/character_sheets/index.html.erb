<p id="notice"><%= notice %></p>

<h1>Character Sheets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Filename</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_sheets.each do |character_sheet| %>
      <tr>
        <td><%= character_sheet.user_id %></td>
        <td><%= character_sheet.filename %></td>
        <td><%= character_sheet.bio %></td>
        <td><%= link_to 'Show', character_sheet %></td>
        <td><%= link_to 'Edit', edit_character_sheet_path(character_sheet) %></td>
        <td><%= link_to 'Destroy', character_sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Character Sheet', new_character_sheet_path %>
