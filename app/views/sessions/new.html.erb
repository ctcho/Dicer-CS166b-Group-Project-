<% provide(:title, "Log in") %>

<div class="login-container">
  <div id="notice">
    <%= notice %>
  </div>

  <div class="page-label" id="login-label">Login</div>
  <div class="login-form-container">
    <%=form_for(:session, url: login_path) do |f| %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <span>Remember me</span>
        <%= f.label :remember_me, class: "inline" do %>
          <%=f.check_box :remember_me %>
        <%end%>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "profile-button signup-login-submit", id: "login-submit" %>
      </div>
    <% end %>
    Need an account? <%= link_to "Sign up!", signup_path %>
  </div>
</div>
