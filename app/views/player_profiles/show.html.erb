<div class="profile-summary">
  <p id="notice"><%= notice %></p>
  <%= image_tag("dicepic.png", height: '300', width: '300')%>
  <p>
    <strong>Username:</strong>
    <%= User.find(@player_profile.user_id).username %>
  </p>

  <p>
    <strong>Age:</strong>
    <%= User.find(@player_profile.user_id).age %>
  </p>

  <p>
    <strong>Experience:</strong>
    <%= translate_experience_level(@player_profile) %>
  </p>

  <p>
    <strong>Maximum play distance:</strong>
    <%= @player_profile.max_distance %>
  </p>

  <p>
    <strong><%= translate_online_play(@player_profile) %></strong>
  </p>

  <% #unless current_user && (current_user.id == params[:user_id])  %>
    <p>
      <strong>Distance:</strong>
      <%= find_distance(User.find(@player_profile.id), current_user) %>
    </p>
  <% #end %>

  <p>
    <strong>Homebrew:</strong>
    <%= @player_profile.homebrew %>
  </p>

  <p>
    <strong>Original ruleset:</strong>
    <%= @player_profile.original_ruleset %>
  </p>

  <p>
    <strong>Advanced ruleset:</strong>
    <%= @player_profile.advanced_ruleset %>
  </p>

  <p>
    <strong>Pathfinder:</strong>
    <%= @player_profile.pathfinder %>
  </p>

  <p>
    <strong>Third:</strong>
    <%= @player_profile.third %>
  </p>

  <p>
    <strong>Three point five:</strong>
    <%= @player_profile.three_point_five %>
  </p>

  <p>
    <strong>Fourth:</strong>
    <%= @player_profile.fourth %>
  </p>

  <p>
    <strong>Fifth:</strong>
    <%= @player_profile.fifth %>
  </p>

  <p>
    <strong>Original campaign:</strong>
    <%= @player_profile.original_campaign %>
  </p>

  <p>
    <strong>Module:</strong>
    <%= @player_profile.module %>
  </p>
</div>
<div>
  <p>
    <strong>Bio:</strong>
    <%= @player_profile.bio %>
  </p>
<div>

<%= link_to 'Edit', edit_user_player_profiles_path(@user, @player_profile) %> |
<%= link_to 'Back', user_path(@user) %>
