    <div class="col-md-8">
      <div class="profile-bio">
      <p>
        <strong>Bio:</strong>
        <%= @player_profile.bio %>
      </p>
    </div>
    </div>
    <div class="col-md-4">
      <div class="more-users-box">
      <p>
        <strong>You may also like:</strong>
      </p>
    </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="ending-buttons">
