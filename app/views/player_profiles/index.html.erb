<p id="notice"><%= notice %></p>

<h1>Player Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Bio</th>
      <th>Experience level</th>
      <th>Max distance</th>
      <th>Online play</th>
      <th>Homebrew</th>
      <th>Original ruleset</th>
      <th>Advanced ruleset</th>
      <th>Pathfinder</th>
      <th>Third</th>
      <th>Three point five</th>
      <th>Fourth</th>
      <th>Fifth</th>
      <th>Original campaign</th>
      <th>Module</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_profiles.each do |player_profile| %>
      <tr>
        <td><%= player_profile.user_id %></td>
        <td><%= player_profile.bio %></td>
        <td><%= player_profile.experience_level %></td>
        <td><%= player_profile.max_distance %></td>
        <td><%= player_profile.online_play %></td>
        <td><%= player_profile.homebrew %></td>
        <td><%= player_profile.original_ruleset %></td>
        <td><%= player_profile.advanced_ruleset %></td>
        <td><%= player_profile.pathfinder %></td>
        <td><%= player_profile.third %></td>
        <td><%= player_profile.three_point_five %></td>
        <td><%= player_profile.fourth %></td>
        <td><%= player_profile.fifth %></td>
        <td><%= player_profile.original_campaign %></td>
        <td><%= player_profile.module %></td>
        <td><%= link_to 'Show', user_player_profiles(player_profile.user.id, player_profile.id) %></td>
        <td><%= link_to 'Edit', edit_player_profiles_path(player_profile) %></td>
        <td><%= link_to 'Destroy', user_player_profiles, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player Profile', new_user_player_profile_path %>
