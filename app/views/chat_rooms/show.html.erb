<br>
<%= @chat_room.name %>
<br>
<% @messages.each do |message|%>
  <%=message.user.username %> | <%= message.created_at%><br>
  <%= message.content %>
  <br><br>
<% end %>

<%= form_tag chat_room_message_url(@chat_room), method: 'post' do %>
<div class="field">
  <%=text_field_tag :message, params[:message] %>
</div>

<div class="action">
    <%= submit_tag "Send" %>
</div>

<%= form_tag leave_chat_path(@chat_room), method: 'delete' do %>
  <div class="action">
    <%= submit_tag "Leave this chat" %>
  </div>
<% end %>

<% end %>
