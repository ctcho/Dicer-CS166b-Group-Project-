<div class="chat-user-container">
  <div class="active-user-avatar">
    <%= image_tag user.avatar.url(:smallerthumb), class: "message-avatar" %>
  </div>
  <div class="chat-user-name">
    <% if current_user.id == user.id %>
      <%= link_to user.username, user_path(user) %>
    <%else%>
      <%= link_to user.username, user_player_profiles_path(user) %>
    <%end%>
  </div>
  <div class="active-dot">
    <!-- put your green/red/blank dot here whoever wants to do that -->
  </div>
</div>
